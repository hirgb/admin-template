@import "./veriable.styl";
*
    margin: 0
    padding: 0
iframe
    width: 100%
    height: 100%
    border: none
.height100
    height: 100%
    box-sizing: border-box
.height50
    height: 50%
    box-sizing: border-box
.width100
    width: 100% !important
.inner-center
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
.highlight
    color: $highlightColor
    font-weight: bold
    font-style: normal
.content-nav
    border: none
    box-sizing: border-box
    padding: 20px 0
    .el-menu-item
        font-size: 12px
        height: 35px
        line-height: 35px
    .is-active
        background-color: #ecf5ff
.center
    text-align: center
.info
    color: #666
    font-size: 12px
    line-height: 12px
i.search-highlight
    font-style: normal
    color: red


#page
    height: 100vh
    overflow-x: hidden
#logo
    height: 60px
    line-height: 60px
    font-size: 18px
    color: #ccc
    text-align: center
    box-sizing: border-box
    border-bottom: 1px solid #777
#esmanager-query-pane.el-tabs
    .el-tabs__nav
        .el-tabs__item
            font-size: 12px
.el-container
    height: 100%
    overflow: hidden
.el-header
    height: 60px
    background-color: #FFF
    color: $mainColor
    position: relative
.el-aside
    height: 100%
    width: $sideMenuWidth !important
    background-color: #545c64
    color: $mainColor
    overflow: hidden !important
.el-main
    background-color: $mainBgColor
    color: #333
.el-tabs__item
    font-size: 16px
.table-head-cell
    color: $mainColor !important
.table-cell
    padding: 3px 0 !important
    color: $mainColor !important
.edit-tabs
    .el-tabs__item
        font-size: 14px
.edit-breadcrumb
    font-size: 12px
    color: #999 !important
.el-select-dropdown__item
    color: $mainColor
.el-input__inner
    color: $mainColor
.el-card__header
    padding: 10px 10px
.el-card__body
    padding: 10px
.el-dialog__wrapper
    overflow-x: hidden
.el-popover
    color: $mainColor
.el-checkbox__label
    font-size: 12px
.el-menu-vertical-demo:not(.el-menu--collapse)
    width: $sideMenuWidth
    min-height: 400px
.el-drawer__header
    color: $mainColor
    margin-bottom: 0px
    border-bottom: 1px solid $borderColor
    padding: 10px 20px
.el-tree
    .el-tree-node.is-current > .el-tree-node__content > span.is-leaf > span.el-tree-node__label
            background-color: $highlightColor
            color: #fff
    .el-tree-node
        .el-tree-node__expand-icon.el-icon
            display: none

.input-with-select
    .el-select
        .el-input
            width: 100px
    .el-input-group__prepend
        background-color: #fff
